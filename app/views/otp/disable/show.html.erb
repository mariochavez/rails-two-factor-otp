<section class="hero is-red">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= t(".title") %>
      </h1>
      <h2 class="subtitle">
        <%= t(".subtitle") %>
      </h2>
    </div>
  </div>
</section>

<article>
  <section class="section">
    <div class="container">
      <div class="card is-small has-margin-auto">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/640x480.png" alt="Authenticator app">
          </figure>
        </div>
        <div class="card-content">
          <div class="content has-text-centered">
            <h2 class="title"><%= t(".step_title") %></h2>
            <p><%= t(".description").html_safe %></p>
          </div>
        </div>
      </div>

    <div class="field is-grouped flex-justify-center mt-3">
      <div class="control">
        <%= link_to t(".disable"), otp_disable_path, class: "button is-danger", method: "delete" %>
      </div>
      <div class="control">
        <%= link_to "Go Back", root_path, class: "button is-light" %>
      </div>
    </div>
    </div>
  </section>
</article>
