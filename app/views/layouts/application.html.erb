<!DOCTYPE html>
<html>
  <head>
    <title>OtpSecurity</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
    <%= stylesheet_pack_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= render partial: "navbar" %>

    <% if flash[:notice].present? || flash[:alert].present? %>
      <div data-controller="flash" class="notification <%= flash[:notice].present? ? 'is-success' : 'is-danger' %> is-light">
          <button class="delete" data-action="click->flash#close"></button>
        <%= flash[:notice] || flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
